{
  "name": "noteup",
  "version": "1.0.0",
  "description": "Local desktop note-taking app",
  "main": "out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "package": "electron-vite build && electron-builder",
    "package:portable": "electron-vite build && electron-packager . NoteUp --platform=win32 --arch=x64 --out=dist --overwrite --ignore=\"(^/src|^/.git|^/dist|^/node_modules)\" --electron-version=28.3.3 --icon=src/assets/Note.ico --extra-resource=src/assets/Note.png"
  },
  "build": {
    "appId": "com.mjayx.noteup",
    "productName": "NoteUp",
    "copyright": "Copyright Â© 2026 mJayXam",
    "files": [
      "out/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "extraResources": [
      {
        "from": "src/assets/Note.png",
        "to": "Note.png"
      }
    ],
    "win": {
      "icon": "src/assets/Note.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "NoteUp"
    }
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.1"
  },
  "devDependencies": {
    "@electron/packager": "^19.0.5",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "electron-vite": "^2.0.0",
    "vite": "^5.0.0"
  }
}
